@import 'nib'

@font-face
   font-family Sans
   font-style bold
   src url(ATARCC__.TTF)

@keyframes transition
	from
		background-position: -1600px
	to
		background-position: 0px
		
html
	height: 100%
	
body
	background-color #111
	margin-top 0px
	padding-top 0px
	background-image url(background.jpg)
	background-size 100% 100%
	animation transition 360s linear 0s infinite

#marker_score
	background-color #000
	border 4px solid
	border-color #ccc
	color #fff
	border-radius 5px
	float right
	width 400px
	margin-top 10px
	font-family Sans
	
#main
	margin-right auto
	margin-top 10px
	border 4px solid
	border-radius 5px
	border-color #ccc
	background-color rgba(0,0,0,0.4)
	padding 2px
	width 900px
	height 600px
	float left
	opacity 0.8
	
#webcam
	display none
	
#canvasSource
	margin-left auto
	margin-right auto
	margin-top 10px
	border 4px solid
	border-radius 5px
	border-color #ccc
	border-radius 5px
	background-color #000
	padding 2px
	width 900px
	height 600px

.page-header
	font-family helvetica
	font-weight lighter
	color #CCCCCC
	font-style normal
	text-align center
	font-size xx-large
	margin 0px

#modal
	font-family helvetica
	color #000
	position absolute
	top 250px 
	left 300px
	width 400px
	height 220px
	background #999
	opacity 0.9
	padding 10px
	border 4px solid
	border-radius 5px
	border-color #ccc
	display none
	a
		color blue
		&:visited
			color blue

.head
	font-size large
	margin-top 0px
	color #000